    <script>
        $('#modal_err').hide();

        $('.edit_img_validation').on("click", function ()
        {
            $('#modal_err').hide();
            var validate_id = $(this).attr('id');
            $('#validate_id_get').val(validate_id);
            var ids = JSON.stringify({ data: validate_id});
            // Calling the Ajax function by passsing validate ID
            $.ajax({

                type: "POST",
                contentType: "application/json",
                datatype: "json",
                data: ids,
                url: "@Url.Action("ImageValidation_FetchByID", "Home")",

                success: function (response)
                {
                    //console.log(response);
                    $('#modal_validation_type').val(response.validation_type);
                    $('#modal_validation_message').val(response.validation_message);
                    if (response.isactive == 0)
                    {
                        $('#checkbox1').prop("checked", true);
                    }
                    else
                    {
                        $('#checkbox1').prop("checked", false);
                    }
                    $('#modal_image_validate_id').val(response.id);


                }
            });
        });


        $('#update_image_validation').on("click", function () {
            $('#modal_err').hide();
            var validate_id = $('#modal_image_validate_id').val();
            if ($('#checkbox1').is(":checked")) {
                var is_active = "0";
            }
            else {
                var is_active = "1";
            }
            var ids = JSON.stringify({ data: validate_id, value: is_active });
            // Calling the Ajax function by passsing validate ID and Is_active
            $.ajax({

                type: "POST",
                contentType: "application/json",
                datatype: "json",
                data: ids,
                url: "@Url.Action("ImageValidation_FetchByIsActive", "Home")",

                success: function (response)
                {
                    if (response.Result == true) {
                        $('#modal_err').hide();
                        setTimeout(function () {
                            window.location.href = "image_validation";
                        }, 100);
                    }
                    else {
                        $('#modal_err').show();
                    }
                }
            });


        });
    </script>
