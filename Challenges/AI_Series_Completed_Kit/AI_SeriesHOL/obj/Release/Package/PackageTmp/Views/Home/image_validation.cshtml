                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="float: left;">Image Validation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Validation Type</label>
                            <input type="text" class="form-control" id="modal_validation_type" readonly>
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">Validation Message</label>
                            <textarea class="form-control" id="modal_validation_message" readonly></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="modal_image_validate_id" value="" />
                    <button type="button" class="btn btn-primary" id="update_image_validation">Update</button>
                    <label class="switch" style="float: left;">
                        <input class="switch-input" name="checkbox" id="checkbox1" type="checkbox" />
                        <span class="switch-label" data="" data-on="Enabled" data-off="Disabled"></span>
                        <span class="switch-handle"></span>
                    </label>
                    <p style="font-size:12px;color:red;" id="modal_err">Please try again...</p>
                </div>
            </div>
