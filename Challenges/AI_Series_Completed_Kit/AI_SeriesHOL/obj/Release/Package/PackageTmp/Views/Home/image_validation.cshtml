                                                    <input type="text" class="form-control" placeholder="@i.validation_type" readonly>
                                                </div>
                                                <div class="col-sm-12 cs-padding">
                                                    <label>Validation Message</label>
                                                    <input type="text" class="form-control" placeholder="@i.validation_message" readonly>
                                                </div>
