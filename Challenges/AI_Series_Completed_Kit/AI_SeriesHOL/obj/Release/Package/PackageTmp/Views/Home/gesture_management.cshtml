    <script type="text/javascript" src="~/assets/js/common/jquery-1.x-git.min.js"></script>
    <script type="text/javascript" src="~/assets/js/common.js"></script>
    <script type="text/javascript" src="~/assets/js/bootstrap-select.js"></script>
    <script type="text/javascript" src="~/assets/js/scripts.js"></script>
    <script>
        $('#modal_err').hide();
        $('#add_modal_err').hide();
        $('#required_modal_err').hide();
        function errhide() {
            $('#modal_err').hide();
            $('#add_modal_err').hide();
            $('#required_modal_err').hide();
        }
        $('.edit_gesture_management').on("click", function ()
        {
            $('#modal_err').hide();
            var gesture_management_id = $(this).attr('id');
            $('#gesture_management_id_get').val(gesture_management_id);
            var ids = JSON.stringify({ data: gesture_management_id});
            // Calling the Ajax function by passsing  gesture_management_id
            $.ajax({

                type: "POST",
                contentType: "application/json",
                datatype: "json",
                data: ids,
                url: "@Url.Action("GestureManagement_FetchByID", "Home")",

                success: function (response)
                {
                    //console.log(response);
                    $('#gesture_management_validationType').val(response.gesture_name);
                    $('#gesture_management_ImageURL').val(response.thumbnail_url);
                    $('#gesture_management_validationMSG').val(response.gesture_message);

                    if (response.isactive == 0)
                    {
                        $('#checkbox1').prop("checked", true);
                    }
                    else
                    {
                        $('#checkbox1').prop("checked", false);
                    }
                    $('#modal_gesture_id').val(response.id);
                }
            });
        });


         $('#update_gesture').on("click", function () {
            $('#modal_err').hide();
             var modal_gesture_id = $('#modal_gesture_id').val();
            if ($('#checkbox1').is(":checked")) {
                var is_active = "0";
            }
            else {
                var is_active = "1";
             }

             var ids = JSON.stringify({ data: modal_gesture_id, value: is_active });
             // Calling the Ajax function by passsing  modal_gesture_id and is_active
            $.ajax({

                type: "POST",
                contentType: "application/json",
                datatype: "json",
                data: ids,
                url: "@Url.Action("GestureManagement_FetchByIsActive", "Home")",

                success: function (response)
                {
                    if (response.Result == true) {
                        $('#modal_err').hide();
                        setTimeout(function () {
                            window.location.href = "gesture_management";
                        }, 100);
                    }
                    else {
                        $('#modal_err').show();
                    }
                }
            });


        });

        $('#add_gesture_management').on("click", function () {
            $('#add_modal_err').hide();
            $('#required_modal_err').hide();
            var add_gesture_name = $('#add_gesture_name').val();
            var add_gesture_image_url = $('#add_gesture_image_url').val();
            var add_gesture_message = $('#add_gesture_message').val();
            if ($('#checkbox2').is(":checked")) {
                var is_active = "0";
            }
            else {
                var is_active = "1";
             }

            var ids = JSON.stringify({ name: add_gesture_name, url: add_gesture_image_url, message: add_gesture_message, active: is_active });
            // Checking Name, URL and Message fields is not equal to empty
            if (add_gesture_name != "" && add_gesture_image_url != "" && add_gesture_message != "") {
                // Calling the Ajax function by passsing  add_gesture_name, add_gesture_image_url, add_gesture_message
                $.ajax({

                    type: "POST",
                    contentType: "application/json",
                    datatype: "json",
                    data: ids,
                    url: "@Url.Action("GestureManagement_InsertByIsID", "Home")",

                    success: function (response) {
                        if (response.Result == true) {
                            $('#add_modal_err').hide();
                            $('#required_modal_err').hide();
                            setTimeout(function () {
                                window.location.href = "gesture_management";
                            }, 100);
                        }
                        else {
                            $('#add_modal_err').show();
                            $('#required_modal_err').hide();
                        }
                    }
                });
            }
            else {
                $('#required_modal_err').show();
                $('#add_modal_err').hide();
            }


        });


    </script>
