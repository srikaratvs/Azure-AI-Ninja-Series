            </div>
            <ul class="fab-options">

                <a data-toggle="modal" data-target="#exampleModal1" data-whatever="@@getbootstrap">
                    <li>
                        <span class="fab-label">Add Gesture</span>
                        <div class="fab-icon-holder">
                            <i class="fa fa-building"></i>
                        </div>
